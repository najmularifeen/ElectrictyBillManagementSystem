<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.demo4.ApplyLateFineController"
            prefWidth="400" prefHeight="250"
            style="-fx-background-color: #fff8dc;">

    <VBox spacing="15" alignment="CENTER" layoutX="50" layoutY="50">

        <Label text="Apply Late Payment Fine Automatically"
               style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <Button text="Apply Fine Automatically"
                onAction="#onApplyFineAutomatically"
                style="-fx-background-color: #f0ad4e;" />

        <Label fx:id="messageLabel"
               textFill="green"
               wrapText="true"
               style="-fx-font-size: 13px;" />
    </VBox>
</AnchorPane>
