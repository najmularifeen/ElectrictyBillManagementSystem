<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.demo4.TaxesController"
            prefHeight="350.0" prefWidth="400.0"
            style="-fx-background-color: #fff3e0;">
    <children>
        <Label layoutX="30" layoutY="20" text="Tax Rates:" style="-fx-font-size: 16;" />

        <Label layoutX="30" layoutY="60" text="FPA Tax:" />
        <Label fx:id="fpaLabel" layoutX="150" layoutY="60" />
        <TextField fx:id="fpaField" layoutX="220" layoutY="60" prefWidth="100" />

        <Label layoutX="30" layoutY="90" text="Sales Tax:" />
        <Label fx:id="salesTaxLabel" layoutX="150" layoutY="90" />
        <TextField fx:id="salesTaxField" layoutX="220" layoutY="90" prefWidth="100" />

        <Label layoutX="30" layoutY="120" text="PTV Fee:" />
        <Label fx:id="ptvLabel" layoutX="150" layoutY="120" />
        <TextField fx:id="ptvField" layoutX="220" layoutY="120" prefWidth="100" />

        <Button fx:id="updateButton" layoutX="150" layoutY="170" text="Update Taxes" onAction="#onUpdateTaxes" />

        <Label fx:id="messageLabel" layoutX="30" layoutY="220" wrapText="true" textFill="red" />
    </children>
</AnchorPane>
